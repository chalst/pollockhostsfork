#source this file
#Need binary: curl
#Need: to set up local repo to have a "dist" branch that is not customised
git checkout dist
if git diff --exit-code -- host
  then	
	curl http://someonewhocares.org/hosts/hosts > hosts
	git add hosts
  else
	echo "Won't clobber hosts while it differs from dist's index"
	return 1
fi
